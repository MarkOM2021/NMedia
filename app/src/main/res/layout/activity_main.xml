<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBarrier"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_post" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottomBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="edition, save, editionCancel"
        app:barrierDirection="top" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/editionField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="editionCancel, editionMessage, editingContent, closeEditMode, editionModeClosing"
         />

    <EditText
        android:id="@+id/edition"
        android:background="@android:color/transparent"
        android:importantForAutofill="no"
        android:layout_width="0dp"
        android:hint="@string/content_hint"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/save" />

    <ImageView
        android:id="@+id/save"
        app:srcCompat = "@drawable/ic_save_24"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/edition"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/innerBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="edition"
        app:barrierDirection="top" />

    <TextView
        android:id="@+id/editionCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:importantForAutofill="no"
        android:padding="@dimen/common_spacing"
        app:layout_constraintBottom_toTopOf="@id/edition"
        app:layout_constraintEnd_toEndOf="@id/save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomBarrier"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/editionModeClosing"
        app:srcCompat = "@drawable/ic_edit_24"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/editionCancel"
        app:layout_constraintBottom_toBottomOf="@id/editionCancel"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/editionMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#00ACC1"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:paddingTop="4dp"
        android:text="@string/edition_message"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/editionModeClosing"
        app:layout_constraintTop_toTopOf="@id/editionCancel"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/editingContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/content_hint"
        android:importantForAutofill="no"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/editionModeClosing"
        app:layout_constraintEnd_toStartOf="@id/closeEditMode"
        app:layout_constraintTop_toBottomOf="@id/editionMessage"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/closeEditMode"
        app:srcCompat = "@drawable/ic_close_24"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/editionCancel"
        app:layout_constraintBottom_toBottomOf="@id/editionCancel"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>